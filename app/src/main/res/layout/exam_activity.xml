<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_exam"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="exam.ExamActivity">
    <TextView
        android:id="@+id/tv_exam_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/exit"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="退出测试"
        android:textSize="14dp"
        android:textColor="#FF0000"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF0000"/>
    <TextView
        android:id="@+id/tv_exam_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:textSize="22sp"
        tools:text="question???"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/rg_exam_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <RadioButton
                android:id="@+id/rb_exam_choose1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="5dp"
                style="@style/RadioButtonStyle"
                android:textSize="18sp"
                tools:text="1234"/>
            <RadioButton
                android:id="@+id/rb_exam_choose2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="5dp"
                style="@style/RadioButtonStyle"
                android:textSize="18sp"
                tools:text="1234"/>
            <RadioButton
                android:id="@+id/rb_exam_choose3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="5dp"
                style="@style/RadioButtonStyle"
                android:textSize="18sp"
                tools:text="1234"/>
            <RadioButton
                android:id="@+id/rb_exam_choose4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="5dp"
                style="@style/RadioButtonStyle"
                android:textSize="18sp"
                tools:text="1234"/>
        </RadioGroup>
        <TextView
            android:id="@+id/tv_exam_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            tools:text="答案！"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF0000">

        <TextView
            android:id="@+id/tv_exam_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/bmob_update_button_ok_bg_normal"
            android:gravity="center"
            android:textColor="#ffffff"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_exam_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@drawable/bmob_update_button_ok_bg_normal"
            android:gravity="center"
            android:textColor="#ffffff"
            tools:text="1" />
    </LinearLayout>

</LinearLayout>